<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:RaySpeedometer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.github.anastr.speedviewlib.DistributionSpeedometer
        android:id="@+id/raySpeedometer"
        android:layout_width="500dp"
        android:layout_height="500dp"
        RaySpeedometer:sv_backgroundCircleColor="@color/transparent"
        RaySpeedometer:sv_withEffects="false"
        RaySpeedometer:sv_markColor="@color/gray"
        RaySpeedometer:sv_rimColor="@color/text_color_login_label"
        RaySpeedometer:sv_degreeBetweenMark="3"
        RaySpeedometer:sv_titleText="Ingredient"
        RaySpeedometer:sv_titleTextSize="@dimen/progress_bar_normal_text_size"
        RaySpeedometer:sv_speedTextPosition="CENTER"
        RaySpeedometer:sv_speedTextSize="@dimen/progress_bar_large_text_size"
        RaySpeedometer:sv_withTremble="false"
        RaySpeedometer:sv_speedLimitSize="@dimen/progress_bar_normal_text_size"
        RaySpeedometer:sv_kilogramText="Kg"
        RaySpeedometer:sv_kilogramTextSize="@dimen/progress_bar_normal_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>